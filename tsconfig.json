{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "strict": true,
        "noUnusedLocals": true,
        "strictPropertyInitialization": false,
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "skipLibCheck": false,
        "outDir": "./dist",
        "baseUrl": "./src",
        "paths": {
            "@core_entities/*": ["core/entities/*"],
            "@core_interfaces/*": ["core/interfaces/*"],
            "@core_usecases/*": ["core/usecases/*"],
            "@core_repositories/*": ["core/repositories/*"],
            "@infra_middlewares/*": ["infra/middlewares/*"],
            "@infra_controllers/*": ["infra/controllers/*"],
            "@infra_databases/*": ["infra/databases/*"],
            "@utils/*": ["utils/*"]
        }
    },
    "exclude": ["dist", "node_modules", "coverage", ".vscode"]
}
