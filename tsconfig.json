{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "strict": true,
        "noUnusedLocals": true,
        "strictPropertyInitialization": false,
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "skipLibCheck": false,
        "outDir": "./dist",
        "baseUrl": "./src",
        "paths": {
            "@core_entities/*": ["entities/*"],
            "@core_interfaces/*": ["interfaces/*"],
            "@core_usecases/*": ["usecases/*"],
            "@core_repositories/*": ["repositories/*"],
            "@utils/*": ["utils/*"]
        }
    },
    "exclude": ["dist", "node_modules", "coverage", ".vscode"]
}
