{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "strict": true,
        "noUnusedLocals": true,
        "strictPropertyInitialization": false,
        "baseUrl": "./src",
        "outDir": "./dist",
        "declaration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "skipLibCheck": false
    },
    "include": ["src/**/*", "package*.json", "*.ts"],
    "exclude": ["dist", "node_modules", "coverage", ".vscode"]
}
